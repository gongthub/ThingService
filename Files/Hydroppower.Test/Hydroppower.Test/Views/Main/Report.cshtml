@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Report</title>
    <meta charset="utf-8">
    <!-- 引入 ECharts 文件 -->
    <script src="~/Scripts/echarts.js"></script>
</head>
<body> 
        <div id="main" style="width: 1500px;height:600px;"></div> 
    <input type="button" value="按日" onclick="GetDataByDates()" />
</body>
</html>
<script src="~/Scripts/jquery-1.8.2.min.js"></script>
<script type="text/javascript">
    // 基于准备好的dom，初始化echarts实例
    var myChart = echarts.init(document.getElementById('main'));
     
    var colors = ['#5793f3', '#d14a61', '#675bba', '#FF83FA'];

    option = {
        color: colors,

        tooltip: {
            trigger: 'axis'
        },
        grid: {
            right: '20%'
        },
        toolbox: {
            feature: {
                dataView: {show: true, readOnly: false},
                restore: {show: true},
                saveAsImage: {show: true}
            }
        },
        legend: {
            data: ['用电量', '用水量', '平均用电量', '平均用水量']
        },
        xAxis: [
            {
                type: 'category',
                axisTick: {
                    alignWithLabel: true
                },
                data: ['1月','2月','3月','4月','5月','6月','7月','8月','9月','10月','11月','12月']
            }
        ],
        yAxis: [
            {
                type: 'value',
                name: '用电量',
                min: 0,
                max: 200,
                position: 'right',
                axisLine: {
                    lineStyle: {
                        color: colors[0]
                    }
                },
                axisLabel: {
                    formatter: '{value} KW·h'
                }
            },
            {
                type: 'value',
                name: '用水量',
                min: 0,
                max: 200,
                position: 'right',
                offset: 80,
                axisLine: {
                    lineStyle: {
                        color: colors[1]
                    }
                },
                axisLabel: {
                    formatter: '{value} m³'
                }
            },
            {
                type: 'value',
                name: '平均用电量',
                min: 0,
                max: 250,
                position: 'left',
                axisLine: {
                    lineStyle: {
                        color: colors[2]
                    }
                },
                axisLabel: {
                    formatter: '{value} KW·h'
                }
            },
            {
                type: 'value',
                name: '平均用水量',
                min: 0,
                max: 200,
                offset:80,
                position: 'left',
                axisLine: {
                    lineStyle: {
                        color: colors[3]
                    }
                },
                axisLabel: {
                    formatter: '{value} m³'
                }
            }
        ],
        series: [
            {
                name: '用电量',
                type:'bar',
                data:[2.0, 4.9, 7.0, 23.2, 25.6, 76.7, 135.6, 162.2, 32.6, 20.0, 6.4, 3.3]
            },
            {
                name: '用水量',
                type:'bar',
                yAxisIndex: 1,
                data:[2.6, 5.9, 9.0, 26.4, 28.7, 70.7, 175.6, 182.2, 48.7, 18.8, 6.0, 2.3]
            },
            {
                name: '平均用电量',
                type:'line',
                yAxisIndex: 2,
                data:[2.0, 2.2, 3.3, 4.5, 6.3, 10.2, 20.3, 23.4, 23.0, 16.5, 12.0, 6.2]
            },
            {
                name: '平均用水量',
                type: 'line',
                yAxisIndex: 3,
                data: [1.0, 3.2, 4.3, 6.5,9.3, 4.2, 2.3, 5.4, 8.0, 17.5, 5.0, 2.2]
            }
        ]
    };


    // 使用刚指定的配置项和数据显示图表。
    myChart.setOption(option);

    //按日展示数据
    function GetDataByDate() {
        var d = new Date();
        var daysCount = new Date(d.getFullYear(), d.getMonth() + 1, 0).getDate();
        var datas = [];
        var serdatas1 = [];
        var serdatas2 = [];
        var serdatas3 = [];
        for (var i = 1; i <= daysCount; i++) {
            var datat = d.getFullYear() + "-" + (d.getMonth() + 1) + "-" + i;
            datas.push(datat);
            serdatas1.push(i);
            serdatas2.push(i + 10);

        }
        for (var i = 1; i <= daysCount; i++) {
            var temps = ((serdatas1[i] + serdatas2[i]) / 2);
            serdatas3.push(temps);
        }

        option.xAxis[0].data = datas;
        option.series[0].data = serdatas1;
        option.series[1].data = serdatas2;
        option.series[2].data = serdatas3;
        option.series[3].data = serdatas3;


        // 使用刚指定的配置项和数据显示图表。
        myChart.setOption(option);
    }


    function GetDataByDates()
    { 
        $.ajax({
            type: 'post',
            url: '/Main/GetDataByDate', 
            dataType: 'json',
            success: function (data) {
                var da = eval(data); 
                option.xAxis[0].data = da.xAxisdata;
                option.series[0].data = da.seriesddata;
                option.series[1].data = da.serieswdata;
                option.series[2].data = da.seriesddataa;
                option.series[3].data = da.serieswadata;
                // 使用刚指定的配置项和数据显示图表。
                myChart.setOption(option);
            }
        });

    }
</script>